<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/divider" />

        <ImageView
            android:id="@+id/iv_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="fitStart"
            android:src="@drawable/is_ad"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_average_rating_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="4.5"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tv_restaurant_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_below="@id/tv_average_rating_value"
            android:text="The Coffee Bean and Tea Leaf (Tiong Bahru Plaza)"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_restaurant_title"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="Halal, European"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tv_total_rating_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tags"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="135"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tv_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_rating_count"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="delivers in "
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tv_lead_time_in_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_rating_count"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_toRightOf="@id/tv_delivery"
            android:text="40 min."
            android:textColor="@color/primary_text" />


    </RelativeLayout>

</LinearLayout>